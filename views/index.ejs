<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>MAOE</title>
  <link rel="stylesheet" href="/styles.css"> 
</head>
<body>
  <h1>Alunos</h1>

  <button id="searchButton" onclick="showTable()">
    <span class="icon">ğŸ”</span> Pesquisar
  </button>


  <table id="studentTable" style="display: none;">
    <thead>
      <tr>
        <th>R.A</th>
        <th>Nome</th>
        <th>Nascimento</th>
        <th>Idade</th>
        <th>CPF</th>
      </tr>
    </thead>
    <tbody>
      <% alunos.forEach(aluno => { %>
        <tr>
          <td><%= aluno.ra %></td>
          <td><%= aluno.nome %></td>
          <td><%= aluno.nascimento.toLocaleDateString() %></td>
          <td><%= aluno.idade %> anos</td>
          <td><%= aluno.cpf %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    function showTable() {
      document.getElementById('studentTable').style.display = 'table';
    }
  </script>
